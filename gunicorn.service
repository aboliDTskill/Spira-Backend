[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/home/ubuntu/workspace/spira_backend
ExecStart=/home/ubuntu/workspace/spira_backend/env/bin/gunicorn --workers 3 --bind 127.0.0.1:8000 Spira.wsgi:application

[Install]
WantedBy=multi-user.target
